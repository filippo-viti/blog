<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{path('app_main_index')}}">Blogs</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{path('app_main_index')}}">Home <span class="sr-only">(current)</span></a>
                </li>
                {% for category in categories.getAll %}
                     <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_blog_list', {'category': category.name}) }}">{{category.name}}</a>
                    </li>
                {% endfor %}
                <li class="nav-item">
                    <a class="btn btn-primary" href="{{ path('app_blog_create') }}">Write a new blog</a>
                </li>
            </ul>
            {% if app.user %}
            <a class="btn btn-danger my-2 my-sm-0" href="{{ path('app_logout') }}">Logout</a>
            {% else %}
            <a class="btn btn-success my-2 mr-sm-2 my-sm-0" href="{{ path('app_login') }}">Login</a>
            <a class="btn btn-primary my-2 my-sm-0" href="{{ path('app_register') }}">Register</a>
            {% endif %}
        </div>
    </nav>
</header>